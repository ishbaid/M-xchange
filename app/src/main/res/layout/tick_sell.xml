<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffcb05"
    tools:context="com.example.stephen.mxchange.buy_book"
    android:id="@+id/ok">




    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/price_edit"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/price_label"
        android:layout_alignBottom="@+id/price_label"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:$"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/price_label"
/>



    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/row_edit"
        android:layout_alignBottom="@+id/row_label"
        android:layout_toRightOf="@+id/row_label"
        android:layout_alignLeft="@+id/price_edit" />

    b<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row:"
        android:id="@+id/row_label"
        android:layout_marginTop="20dp"
        android:autoText="true"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/price_label"
        android:layout_alignLeft="@+id/price_label" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/section_edit"
        android:autoText="true"
        android:layout_below="@+id/row_edit"
        android:layout_alignLeft="@+id/row_edit"
        android:layout_alignBottom="@+id/section_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Section:"
        android:layout_marginTop="20dp"
        android:id="@+id/section_label"
        android:layout_below="@+id/row_label"
        android:layout_alignLeft="@+id/row_label"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00274c"
        android:textColor="@android:color/white"
        android:text="Find"
        android:id="@+id/confirm"
        android:layout_below="@+id/show_number"
        android:layout_centerHorizontal="true"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Number"
        android:id="@+id/show_number"
        android:layout_below="@+id/section_label"
        android:layout_alignLeft="@+id/section_label"
        android:layout_marginTop="20dp"
        android:checked="false" />


</RelativeLayout>
