<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:background="@drawable/ic_launcher"
        android:layout_above="@+id/my_textbooks"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />



    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Exchange"
        android:background="#00274c"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:id="@+id/exchange"
        android:layout_below="@+id/my_tickets"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My Textbooks"
        android:background="#00274c"
        android:textColor="@android:color/white"
        android:id="@+id/my_textbooks"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My Tickets"
        android:layout_marginTop="10dp"
        android:background="#00274c"
        android:textColor="@android:color/white"
        android:id="@+id/my_tickets"
        android:layout_below="@+id/my_textbooks"
        android:layout_centerHorizontal="true" />

</RelativeLayout>